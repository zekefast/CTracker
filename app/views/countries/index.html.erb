<section>
  <div id="visited_countries_chart" class="simple_pie_chart" width='300px' height='100px'>
    <table>
      <tr>
        <th>Visited</th>
        <td><%= current_user.countries.count %></td>
      </tr><tr>
        <th>Not Visited</th>
        <td><%= @countries.count - current_user.countries.count %></td>
      </tr>
    </table>
  </div>

  <h1>Countries</h1>

  <div class="search">
    <%= label_tag :search %>
    <%= text_field_tag :search %>
  </div>
  <table id="list">
    <tr>
      <th>
        <%= check_box_tag :select_all %>
        <%= label_tag :select_all, "Select All"%>
        <%= button_tag "Send", id: "send_all" %>
      </th>
      <th>Name</th>
      <th>Code</th>
      <th>Status</th>
      <th></th>
      <th></th>
    </tr>

  <% @countries.each do |country| %>
    <tr id="row<%= country.id %>" class="fade">
      <td>
        <%= check_box_tag "country#{country.id}", country.id, @visited_countries.include?(country), class: "actionable" %>
      </td>
      <td class="name"><%= country.name %></td>
      <td class="code"><%= country.code %></td>
      <td class="status"><%= @visited_countries.include?(country) ? 'Visited' : 'Not Visited' %></td>
      <td><%= link_to 'Show', country %></td>
      <td><%= link_to 'Edit', edit_country_path(country) %></td>
    </tr>
  <% end %>
  </table>
</section>
